{
  "name": "grandicast",
  "version": "1.0.1",
  "main": "src/main.cjs",
  "type": "module",
  "private": true,
  "scripts": {
    "start": "bunx electron .",
    "rebuild": "bunx electron-rebuild -f -w grandi",
    "package": "bunx electron-forge package",
    "make": "bunx electron-forge make"
  },
  "author": "Felix Adrian",
  "description": "Electron application that captures web content from any URL and broadcasts it as NDI video sources for live video production workflows",
  "license": "Apache-2.0",
  "config": {
    "forge": {
      "packagerConfig": {
        "asar": false,
        "name": "Grandicast",
        "icon": "./icon",
        "executableName": "grandicast"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "Grandicast"
          }
        },
        {
          "name": "@electron-forge/maker-zip"
        },
        {
          "name": "@electron-forge/maker-dmg",
          "config": {
            "format": "ULFO"
          }
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        }
      ]
    }
  },
  "dependencies": {
    "grandi": "^1.3.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.6.0",
    "@electron-forge/maker-deb": "^7.11.1",
    "@electron-forge/maker-dmg": "^7.11.1",
    "@electron-forge/maker-rpm": "^7.11.1",
    "@electron-forge/maker-squirrel": "^7.6.0",
    "@electron-forge/maker-zip": "^7.6.0",
    "@electron/rebuild": "^4.0.3",
    "@types/bun": "latest",
    "electron": "^40.4.1"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
